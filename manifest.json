{
  "manifest_version": 2,

  "name": "MalOnTheGo Alpha",
  "description": "Update your MyAnimeList from crunchyroll.com",
  "version": "0.9",

  "browser_action": {
    "default_icon": "images/icon.png",
	"default_title": "Hide MalOTG"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
	"storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.crunchyroll.com/*"
      ],
      "js": ["JavaScript/jquery-3.1.1.min.js", "JavaScript/jquery-ui.min.js", "JavaScript/malanywhere-ui.js", "JavaScript/malotg-page.js"],
      "css": ["CSS/jquery-ui.min.css", "CSS/malanywhere-snipet.css"]
    }
  ],
  "background": {
    "scripts": ["JavaScript/jquery-3.1.1.min.js", "JavaScript/malanywhere.js", "JavaScript/malotg-controller.js"],
    "persistent": false
  },

  "web_accessible_resources": [
    "HTML/malanywhere-snipet.html",
    "CSS/malanywhere-snipet.css"
    ]
}
